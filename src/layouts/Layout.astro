---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	isHome: boolean;
	title: string;
	keywords?: string;
}

const { isHome, title, keywords } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.ico" />
		<title>Jordi Villar &ndash; {title}</title>
		<meta name="keywords" content={keywords} />
	</head>
	<body>
		<div class="antialiased max-w-5xl mx-auto px-6 md:px-8">
			<Header isHome />
			<slot />
			<Footer />
		</div>
	</body>
</html>
<style is:global>
	body:before {
		display: block;
		width: 100%;
		content: "";
		background: #4FD1C5;
		height: 3px;
	}
</style>
