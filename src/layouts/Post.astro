---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	content: {
		title: string;
		description: string;
		subtitle?: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, subtitle, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main class="mb-20 mt-10">
			<div class="w-full">
				<article>
					{pubDate &&
						<div class="text-gray-400 text-right">
							<time datetime={pubDate}>
								{new Date(pubDate).toLocaleDateString('en-us', {
									year: 'numeric',
									month: 'short',
									day: 'numeric',
								})}
							</time>
						</div>
					}
					<h1>
						{title}
					</h1>
					{subtitle &&
						<h3>
							{subtitle}
						</h3>
					}
					<slot />
				</article>
			</div>
		</main>
		<Footer />
	</body>
</html>
