---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<div class="antialiased max-w-5xl mx-auto px-6 md:px-8">
			<Header />
			<main class="text-2xl text-gray-700 mb-20 md:flex mt-10 lg:mt-6 items-baseline">
				<div class="w-full md:w-1/3">
					<h1 class="font-medium sm:font-normal text-xl sm:text-2xl md:text-3xl lg:text-4xl text-gray-900">{title}</h1>
				</div>
				<div class="w-full md:w-2/3">
					{heroImage && <img width={720} height={360} src={heroImage} alt="" />}
					{pubDate && <time>{pubDate}</time>}
					{
						updatedDate && (
							<div>
								Last updated on <time>{updatedDate}</time>
							</div>
						)
					}
					<slot />
				</div>
			</main>
			<Footer />
		</div>
	</body>
</html>

<style is:global>
	body:before {
		display: block;
		width: 100%;
		content: "";
		background: #4FD1C5;
		height: 3px;
	}

	main h4 {
		@apply font-medium sm:font-normal sm:text-xl md:text-2xl lg:text-3xl text-gray-700 mt-6;
	}

	main p {
		@apply mt-6
	}

	main a {
		@apply border-b border-gray-700
	}

	main img {
		@apply mx-auto
	}
</style>
