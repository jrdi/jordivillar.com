---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	content: {
		isHome?: boolean;
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { isHome, title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} isHome={isHome} />
	</head>

	<body>
		<Header isHome={isHome} />
		<main class={isHome ? "text-xl md:text-4xl font-light" : "mb-20 md:flex mt-10" }>
			{ !isHome &&
				<div class="w-full md:w-1/3">
					<h1>{title}</h1>
				</div>
			}
			<div class={`w-full ${!isHome && "md:w-2/3 -mt-3"}`}>
				<slot />
			</div>
		</main>
		<Footer />
	</body>
</html>