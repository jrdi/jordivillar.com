---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	content: {
		title: string;
		description: string;
		subtitle?: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

const {
	content: { title, subtitle, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<div class="antialiased max-w-5xl mx-auto px-6 md:px-8">
			<Header />
			<main class="text-2xl text-gray-700 mb-20 md:flex mt-10 lg:mt-6 items-baseline">
				<div class="w-full">
					<article>
						{pubDate && <div class="text-gray-400 text-right"><time>{pubDate}</time></div>}
						<h1 class="font-medium sm:font-normal text-xl sm:text-2xl md:text-3xl lg:text-4xl text-gray-900">{title}</h1>
						{subtitle && (
							<h3 class="font-medium sm:font-normal text-l sm:text-xl md:text-2xl lg:text-3xl text-gray-500">
							  	{subtitle}
							</h3>)
						}

						<slot />
					</article>
				</div>
			</main>
			<Footer />
		</div>
	</body>
</html>

<style is:global>
	body:before {
		display: block;
		width: 100%;
		content: "";
		background: #4FD1C5;
		height: 3px;
	}

	main h4 {
		@apply font-medium sm:font-normal sm:text-xl md:text-2xl lg:text-3xl text-gray-700 mt-6;
	}

	main p {
		@apply mt-6
	}

	main a {
		@apply border-b border-gray-700
	}

	main img {
		@apply mx-auto
	}
</style>
